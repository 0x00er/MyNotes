<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorBackgroundFloating"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    tools:ignore="PrivateResource">

    <TextView
        android:id="@+id/note_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/delete_this_note"
        android:drawablePadding="25dp"
        android:paddingTop="20dp"
        android:text="@string/delete"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_trash_dark" />

    <TextView
        android:id="@+id/note_send_to_archive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/send_the_current_note_to_archive"
        android:drawablePadding="25dp"
        android:paddingTop="20dp"
        android:text="@string/send_to_archive"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_archive_dark" />

    <TextView
        android:id="@+id/note_make_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/make_a_copy_of_this_note"
        android:drawablePadding="25dp"
        android:paddingTop="20dp"
        android:text="@string/make_a_copy"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_copy_dark" />

    <TextView
        android:id="@+id/note_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/share_this_note"
        android:drawablePadding="25dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="@string/share_note"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_share_dark" />

</LinearLayout>